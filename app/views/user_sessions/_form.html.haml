= simple_form_for @user, url: :user_sessions, html: { class: 'form-horizontal' } do
  = f.input :email, as: :email
  = f.input :password, as: :password
  = f.submit 'Login'

<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>