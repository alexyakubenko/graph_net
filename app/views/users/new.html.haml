.row
  .col-sm-2
  .col-sm-10
    %h2 Register
    = form_for @user, html: { class: 'form-horizontal' } do |f|
      = render 'shared/form_errors', :object => f.object

      .form-group{ class: "#{ 'has-error' if f.object.errors[:email].present? }" }
        = f.label :email, class: ['col-sm-3', 'control-label']
        .col-sm-5
          = f.email_field :email, class: 'form-control'
        .col-sm-4.control-label
          = f.object.errors[:email].first
      .form-group{ class: "#{ 'has-error' if f.object.errors[:password].present? }" }
        = f.label :password, class: ['col-sm-3', 'control-label']
        .col-sm-5
          = f.password_field :password, class: 'form-control'
        .col-sm-4.control-label
          = f.object.errors[:password].first
      .form-group{ class: "#{ 'has-error' if f.object.errors[:password_confirmation].present? }" }
        = f.label :password_confirmation, class: ['col-sm-3', 'control-label']
        .col-sm-5
          = f.password_field :password_confirmation, class: 'form-control'
        .col-sm-4.control-label
          = f.object.errors[:password_confirmation].first
      .form-group
        .col-sm-offset-2.col-sm-8
          %button.btn.btn-default{ type: :submit } SignUp

