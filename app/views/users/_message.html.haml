.row
  - if message.end_node == current_user
    %blockquote.blockquote-reverse
      %p= link_to_if @user.blank?, message.props[:body], messages_user_path(message.start_node.uuid)
      %footer
        %cite= "#{ time_ago_in_words Time.parse(message.props[:created_at]) } назад"
        = link_to "#{ current_user.any_name } (Вы)", current_user
  - else
    %blockquote
      %p= link_to_if @user.blank?, message.props[:body], messages_user_path(message.end_node.uuid)
      %footer
        = link_to message.end_node.any_name, message.end_node
        %cite= "#{ time_ago_in_words Time.parse(message.props[:created_at]) } назад"

