.text-right
  = link_to 'Добавить статью', new_post_path, class: [:btn, 'btn-primary']

- if @user.posts.any?
  %h1= current_user == @user ? 'Созданные вами статьи' : "Статьи, созданные пользователем #{ @user.any_name }"
  %table.table.table-hover
    %tbody
      = render @user.posts.to_a

- if @user.liked_posts.any?
  %h1= current_user == @user ? 'Понравившееся вам статьи' : "Статьи, понравившиеся пользователю #{ @user.any_name }"
  %table.table.table-hover
    %tbody
      = render @user.liked_posts.to_a

